{
  "info": {
    "name": "lets-play",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for auditing lets-play: signup, signin (extract JWT), ping, products"
  },
  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"auditeur\",\n  \"email\": \"auditeur@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "signup"]
        }
      },
      "response": []
    },
    {
      "name": "Signin",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"auditeur\",\n  \"password\": \"Passw0rd!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signin",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "signin"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  const body = pm.response.json();",
              "  const maybeToken = body.token || body.accessToken || (body.data && body.data.token) || body.access_token;",
              "  if (maybeToken) {",
              "    pm.environment.set('token', maybeToken);",
              "    console.log('token saved');",
              "  } else {",
              "    console.warn('No token field found in response', body);",
              "  }",
              "} catch (e) {",
              "  console.error('Could not parse response JSON', e);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Ping (auth optional)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/auth/ping",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "ping"]
        }
      },
      "response": []
    },
    {
      "name": "Products - GET",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      },
      "response": []
    },
    {
      "name": "Products - POST",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"audit-product\",\n  \"description\": \"product created during audit\",\n  \"price\": 9.99\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      },
      "response": []
    }
  ]
}
